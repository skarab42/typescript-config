    "name": "skarab42",
    "email": "contact@skarab42.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skarab42/typescript-config.git"
  },
  "homepage": "https://github.com/skarab42/typescript-config",
  "bugs": "https://github.com/skarab42/typescript-config/issues",
